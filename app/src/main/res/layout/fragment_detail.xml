<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="selectedCountry"
            type="com.svkylmz.showcountries.model.Country" />
    </data>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailFragment">

        <ImageView
            android:id="@+id/countryFlag"
            android:downloadUrl="@{selectedCountry.countryFlagImageUrl}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:minHeight="220dp"
            android:scaleType="fitCenter">
        </ImageView>
        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryFlag"
            android:text="@{selectedCountry.countryName}"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp">
        </TextView>
       <TextView
           android:id="@+id/countryCapital"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/countryName"
           android:text="@{selectedCountry.countryCapital}"
           android:textSize="30sp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="5dp">
       </TextView>
        <TextView
            android:id="@+id/countryRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryCapital"
            android:text="@{selectedCountry.countryRegion}"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
        </TextView>
        <TextView
            android:id="@+id/countryCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryRegion"
            android:text="@{selectedCountry.countryCurrency}"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
        </TextView>
        <TextView
            android:id="@+id/countryLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryCurrency"
            android:text="@{selectedCountry.countryLanguage}"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
        </TextView>
    </RelativeLayout>
</layout>